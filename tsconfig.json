{
  "compilerOptions": {
    "noPropertyAccessFromIndexSignature": false,
    "isolatedModules": true,
    "paths": {
      "~/*": ["./src/*"]
    },
    "strict": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "./build"
  },
  "exclude": ["node_modules", "build"],
  "include": ["./src"]
}
